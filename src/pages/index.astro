---
import CdBox from '../components/CdBox.astro';
import Layout from '../layouts/Layout.astro';
import '../styles/global.css'

const cds = [
  { img: '/images/img01.webp', title: 'Fake Love', body: 'Prod. by : COuture - 140 Bpm', mp3: '/sounds/sound01.mp3'},
  { img: '/images/img02.webp', title: 'Obsession', body: 'Description 2', mp3: '/sounds/sound01.mp3' },
  { img: '/images/img03.webp', title: 'Diggin graves', body: 'Description 2', mp3: '/sounds/sound01.mp3' },
  { img: '/images/img04.webp', title: 'Stars fall around me', body: 'Description 2', mp3: '/sounds/sound01.mp3' },
  { img: '/images/img05.webp', title: 'Daily Dream', body: 'Description 2', mp3: '/sounds/sound01.mp3' },
  { img: '/images/img06.webp', title: 'Reste avec moi', body: 'Description 2', mp3: '/sounds/sound01.mp3' },
  { img: '/images/img07.webp', title: 'Batterie 10%', body: 'Description 2', mp3: '/sounds/sound01.mp3' },
  { img: '/images/img08.webp', title: 'Bleed', body: 'Description 2', mp3: '/sounds/sound01.mp3' },
  { img: '/images/img09.webp', title: 'Missil', body: 'Description 2', mp3: '/sounds/sound01.mp3' },
  { img: '/images/img10.webp', title: 'My People', body: 'Description 2', mp3: '/sounds/sound01.mp3' },
  { img: '/images/img11.webp', title: 'Limitless', body: 'Description 2', mp3: '/sounds/sound01.mp3' },
  { img: '/images/img12.webp', title: 'Frozen', body: 'Description 2', mp3: '/sounds/sound01.mp3' },
  { img: '/images/img13.webp', title: 'VVS', body: 'Description 13', mp3: '/sounds/sound01.mp3' },
];
---

<Layout title="Disrupt sound">
  <div class="presentation-container">
    <p class="presentation"><span class="italic">Disrupt</span> est un collectif de producteur Parisiens composé de Tenma, C0UTURE, Horaze et Lewis Amber. Leur objectif est de promouvoir leur musique et de toucher de nouveaux rappeurs. Ils distribuent leurs musiques via youtube et ont déjà collaboré avec des artiste comme <span class="italic">Damso</span>, <span class="italic">Luidji</span> ou bien <span class="italic">Jäde</span>.</p>
  </div>
	<div class="content-container">
		{cds.map(cd => (
		  <CdBox img={cd.img} title={cd.title} body={cd.body} mp3={cd.mp3}/>
		))}
	</div>
</Layout>
