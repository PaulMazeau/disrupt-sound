---
interface Props {
	title: string;
	body: string;
    img: string;
}

const { img, title, body } = Astro.props;
import '../styles/global.css'
---

<div class="CD-card">
	<div class="img-container">
        <img src={img} alt="" class="cd-img"/>
	</div>
	<div class="text-container">
		<h2> {title} </h2>
		<p> {body} </p>
	</div>
</div>